<body>
  <div class="card">
    <div class="warning">
      ‚ö†Ô∏è All Emails and Passwords will be deleted within 48 hours for privacy and user saftey
    </div>

    <!-- Fake login form -->
    <form id="demoForm">
      <label>Email</label><br />
      <input type="email" id="email" placeholder="you@example.com" required /><br />

      <label>Password</label><br />
      <input type="password" id="password" placeholder="enter anything" required /><br />

      <button type="submit">Submit</button>
    </form>

    <!-- Hidden log section -->
    <div id="logSection">
      <hr />
      <h3>üìú Admin Log</h3>
      <button id="downloadLog">Download Log File</button>
      <div class="log" id="logBox">No entries yet.</div>
    </div>
  </div>

  <script>
    const form = document.getElementById("demoForm");
    const logBox = document.getElementById("logBox");
    const downloadBtn = document.getElementById("downloadLog");
    const logSection = document.getElementById("logSection");

    let logEntries = [];

    form.addEventListener("submit", function(e) {
      e.preventDefault();
      const email = document.getElementById("email").value;
      const password = document.getElementById("password").value;

      const entry = `Email: ${email} | Fake Password: ${password}`;
      logEntries.push(entry);

      logBox.textContent = logEntries.join("\n");

      // check if this is the special admin login
      if (email === "Admin@123" && password === "Admin12345") {
        logSection.style.display = "block"; // unlock log section
        alert("‚úÖ Admin access granted!");
      }

      form.reset();
    });

    downloadBtn.addEventListener("click", function() {
      if (logEntries.length === 0) {
        alert("No submissions yet!");
        return;
      }
      const content = logEntries.join("\n");
      const blob = new Blob([content], { type: "text/plain" });
      const link = document.createElement("a");
      link.href = URL.createObjectURL(blob);
      link.download = "fake_login_log.txt";
      link.click();
    });
  </script>
